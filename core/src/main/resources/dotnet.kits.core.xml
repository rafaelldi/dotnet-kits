<idea-plugin>
    <resource-bundle>messages.DotnetKitsCoreBundle</resource-bundle>

    <dependencies>
        <module name="intellij.platform.compose"/>
    </dependencies>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="me.rafaelldi.dotnet.kits.core.toolWindow.WarehouseToolWindowFactory"
                    id="Warehouse"
                    icon="me.rafaelldi.dotnet.kits.core.DotnetKitsCoreIcons.Dotnet"
                    anchor="right"
                    doNotActivateOnStart="true"/>
    </extensions>

    <actions>
        <action id="Dotnet.Warehouse.Receive"
                class="me.rafaelldi.dotnet.kits.core.actions.DownloadDotnetReleaseAction"
                icon="AllIcons.Actions.Download"/>
    </actions>
</idea-plugin>